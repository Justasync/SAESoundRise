
<IfModule mod_php.c>
    php_value upload_max_filesize 25M
    php_value post_max_size 300M
    php_value memory_limit 350M
    php_value max_execution_time 300
</IfModule>

# Disable directory listing
Options -Indexes

# Evita el acceso directo a archivos dentro de config y views
RewriteEngine On

RewriteRule ^archive/ - [F,L]
RewriteRule ^config/ - [F,L]
RewriteRule ^sql/ - [F,L]

# Deny access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|env|ini|log|sh|p8|pem|key|crt|gitignore|gitmodules|lock|sql|bak)$">
  Require all denied
</FilesMatch>