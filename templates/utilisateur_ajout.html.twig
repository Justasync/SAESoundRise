{% extends 'base_template.html.twig' %}

{% block title %}Ajouter Utilisateur - Paaxio{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                    <h3 class="fw-bold" style="color: #D99181;">Nouvel Utilisateur</h3>
                </div>
                <div class="card-body p-4">

                    {# --- PEGA ESTO AQUÍ --- #}
    {% if error is defined and error is not null %}
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>
                {{ error }}
            </div>
        </div>
    {% endif %}
    {# ---------------------- #}

    
                    <form action="?controller=utilisateur&method=inscription" method="POST">
                        
                        <!-- Pseudo -->
                        <div class="mb-3">
                            <label for="pseudo" class="form-label">Pseudo</label>
                            <input type="text" class="form-control rounded-pill px-3" id="pseudo" name="pseudo" required>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control rounded-pill px-3" id="email" name="email" required>
                        </div>

                        <!-- Contraseña -->
                        <div class="mb-3">
                            <label for="mdp" class="form-label">Mot de passe</label>
                            <input type="password" class="form-control rounded-pill px-3" id="mdp" name="mdp" required>
                        </div>

                        <!-- Selección de Rol (Solo visible para admins) -->
                        <div class="mb-4">
                            <label for="role" class="form-label">Rôle</label>
                            <select class="form-select rounded-pill px-3" id="role" name="role">
                                <option value="auditeur">Auditeur</option>
                                <option value="artiste">Artiste</option>
                                <option value="admin">Admin</option>
                                <option value="producteur">Producteur</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn text-white rounded-pill py-2 fw-bold" style="background-color: #D99181;">
                                Créer l'utilisateur
                            </button>
                            <a href="?controller=admin&method=afficher" class="btn btn-light rounded-pill py-2">
                                Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}