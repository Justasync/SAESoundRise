{% extends "base_template.html.twig" %}

{% block title %}{{ page.title }}{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <!-- Colonne pour le formulaire d'ajout -->
        <div class="col-lg-6">
            <h2>{{ page.title }}</h2>
            <p>{{ page.description }}</p>

            {% if error %}
                <div class="alert alert-danger">
                    {% if error == 'file_too_large' %}
                        Le fichier audio est trop volumineux.
                    {% else %}
                        Une erreur est survenue. Veuillez vérifier tous les champs.
                    {% endif %}
                </div>
            {% endif %}
            {% if success == 'song_added' %}
                <div class="alert alert-success">
                    La chanson a été ajoutée avec succès ! Vous pouvez en ajouter une autre.
                </div>
            {% endif %}

            <form action="index.php?controller=chanson&method=ajouterChanson" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="titreChanson" class="form-label">Titre de la chanson</label>
                    <input type="text" class="form-control" id="titreChanson" name="titreChanson" required>
                </div>

                <div class="mb-3">
                    <label for="dureeChanson" class-="form-label">Durée (en secondes)</label>
                    <input type="number" class="form-control" id="dureeChanson" name="dureeChanson" required min="1">
                </div>

                <div class="mb-3">
                    <label for="albumChanson" class="form-label">Album</label>
                    <select class="form-select" id="albumChanson" name="albumChanson" required>
                        <option value="">Sélectionnez un album</option>
                        {% for album in albums %}
                            <option value="{{ album.idAlbum }}">{{ album.titreAlbum }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="genreChanson" class="form-label">Genre</label>
                    <select class="form-select" id="genreChanson" name="genreChanson" required>
                        <option value="">Sélectionnez un genre</option>
                        {% for genre in genres %}
                            <option value="{{ genre.idGenre }}">{{ genre.nomGenre }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="urlAudioChanson" class="form-label">Fichier audio (MP3, WAV)</label>
                    <input class="form-control" type="file" id="urlAudioChanson" name="urlAudioChanson" accept=".mp3,.wav" required>
                </div>

                <button type="submit" class="btn btn-primary">Ajouter la chanson</button>
            </form>
        </div>

        <!-- Colonne pour les listes -->
        <div class="col-lg-6">
            <!-- Liste des albums -->
            <div class="mb-5">
                <h3>Vos Albums</h3>
                {% if albums is not empty %}
                    <ul class="list-group">
                        {% for album in albums %}
                            <li class="list-group-item">{{ album.titreAlbum }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>Vous n'avez pas encore créé d'album.</p>
                {% endif %}
            </div>

            <!-- Liste des chansons -->
            <div>
                <h3>Vos Chansons Ajoutées</h3>
                {% if chansonsArtiste is not empty %}
                    <ul class="list-group">
                        {% for chanson in chansonsArtiste %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ chanson.titreChanson }}
                                <span class="badge bg-secondary">{{ chanson.albumChanson.titreAlbum }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>Vous n'avez pas encore ajouté de chanson.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}