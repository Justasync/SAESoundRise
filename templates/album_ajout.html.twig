{% extends "base_template.html.twig" %}

{% block title %}{{ page.title }}{% endblock %}

{% block content %}
<div class="container mt-5">
    <h2>{{ page.title }}</h2>
    <p>{{ page.description }}</p>

    <div class="card">
        <div class="card-body">
            <form action="index.php?controller=album&method=ajouterChansons" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="chansons" class="form-label">Sélectionnez une ou plusieurs chansons (MP3) :</label>
                    <input class="form-control" type="file" id="chansons" name="chansons[]" multiple accept=".mp3" required>
                </div>
                <button type="submit" class="btn btn-primary">Téléverser</button>
            </form>
        </div>
    </div>
</div>

<div class="container mt-5">
    <hr>
    <h3>Mes Albums et Singles</h3>
    {% if albums_artiste is defined and albums_artiste|length > 0 %}
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            {% for album in albums_artiste %}
                <div class="col">
                    <div class="card h-100">
                        <a href="index.php?controller=album&method=afficher&idAlbum={{ album.idAlbum }}">
                            <img src="{{ album.urlPochetteAlbum }}" class="card-img-top" alt="Pochette de {{ album.titreAlbum }}">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="index.php?controller=album&method=afficher&idAlbum={{ album.idAlbum }}" class="text-decoration-none">{{ album.titreAlbum }}</a>
                            </h5>
                            <p class="card-text"><small class="text-muted">Sorti le {{ album.dateSortieAlbum|date("d/m/Y") }}</small></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            Vous n'avez pas encore ajouté d'album ou de single.
        </div>
    {% endif %}
</div>

{% if show_album_modal is defined and show_album_modal %}
<!-- Modal pour la création d'album -->
<div class="modal fade" id="albumCreationModal" tabindex="-1" aria-labelledby="albumCreationModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="albumCreationModalLabel">Créer un nouvel album</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Veuillez entrer les informations pour le nouvel album.</p>
        <form action="index.php?controller=album&method=creerAlbum" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="titre_album" class="form-label">Titre de l'album</label>
                <input type="text" class="form-control" id="titre_album" name="titre_album" value="{{ default_album_title | default('') }}" required>
            </div>
            <div class="mb-3">
                <label for="date_sortie" class="form-label">Date de sortie</label>
                <input type="date" class="form-control" id="date_sortie" name="date_sortie" value="{{ "now"|date("Y-m-d") }}" required>
            </div>
            <div class="mb-3">
                <label for="pochette_album" class="form-label">Pochette de l'album</label>
                <input class="form-control" type="file" id="pochette_album" name="pochette_album" accept="image/*" required>
            </div>

            <hr>
            <h5>Chansons à inclure :</h5>
            {# Boucle sur les chansons téléversées pour créer les champs modifiables #}
            {% for index, chanson in chansons_televersees %}
                <div class="card mb-3">
                    <div class="card-body">
                        <h6 class="card-title">Chanson {{ loop.index }}</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="chanson_{{ index }}_titre" class="form-label">Titre</label>
                                <input type="text" class="form-control" id="chanson_{{ index }}_titre" name="chansons[{{ index }}][titre]" value="{{ chanson.titre }}" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="chanson_{{ index }}_genre" class="form-label">Genre</label>
                                <input type="text" class="form-control" id="chanson_{{ index }}_genre" name="chansons[{{ index }}][genre]" value="{{ chanson.genre }}" required>
                            </div>
                        </div>
                        <input type="hidden" name="chansons[{{ index }}][chemin]" value="{{ chanson.chemin }}">
                        <input type="hidden" name="chansons[{{ index }}][duree]" value="{{ chanson.duree }}">
                    </div>
                </div>
            {% endfor %}

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-primary">Créer l'album</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endif %}
{% endblock %}

{% block script %}
    {# On n'utilise pas parent() ici pour ne pas hériter d'un bloc vide, on ajoute directement notre script. #}
    {% if show_album_modal is defined and show_album_modal %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var albumModal = new bootstrap.Modal(document.getElementById('albumCreationModal'), {});
            albumModal.show();
        });
    </script>
    {% endif %}
{% endblock %}