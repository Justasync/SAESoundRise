{% extends "base_template.html.twig" %}

{% block header %}
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="assets/css/album_ajout.css">
    
    {# Librairie pour lire les métadonnées des fichiers audio côté client #}
    <script src="https://cdn.jsdelivr.net/npm/jsmediatags@3.9.5/dist/jsmediatags.min.js"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Montserrat', 'sans-serif'],
                    },
                    colors: {
                        paaxio: {
                            bg: '#FFF8F3', // Fond crème très clair
                            nav: '#F0F8FF', // Fond header bleuté
                            green: '#2AB7A9', // Vert du menu actif
                            salmon: '#E6957B', // Couleur principale boutons/table
                            salmonLight: '#EBB6A6',
                            salmonDark: '#D67E63',
                            inputBg: '#EBC4B5',
                        }
                    }
                }
            }
        }
    </script>
{% endblock %}

{% block content %}
<body class="bg-paaxio-bg font-sans text-gray-700 min-h-screen flex flex-col relative overflow-x-hidden">

    <!-- Filigrane (Background Logo) -->
    <div class="watermark-container">
        <div class="relative flex items-center justify-center">
            <!-- Casque -->
            <i class="fas fa-headphones text-[600px] text-paaxio-salmon"></i>
            <!-- Rouage/Onde au centre -->
            <i class="fas fa-gear text-[250px] text-paaxio-salmon absolute animate-spin-slow" style="animation-duration: 20s;"></i>
        </div>
    </div>

    <!-- Main Content -->
    <main class="flex-grow relative z-10 flex flex-col items-center pt-8 px-4 w-full max-w-5xl mx-auto">
        
        <!-- Sub-Navigation Tabs -->
        <div class="flex space-x-4 mb-10">
            <button class="px-6 py-2 rounded-lg bg-paaxio-salmonLight text-white font-bold hover:bg-paaxio-salmon transition shadow-sm">Bibliothèque</button>
            <button class="px-6 py-2 rounded-lg bg-paaxio-salmonLight text-white font-bold hover:bg-paaxio-salmon transition shadow-sm">Téléchargée</button>
            <button class="px-6 py-2 rounded-lg bg-paaxio-salmon text-white font-bold shadow-md transform scale-105">Ajouter</button>
        </div>

        <!-- Headline -->
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-8 text-center">
            Vous souhaitez télécharger un album ou un single ?
        </h1>

        <form id="albumForm" action="index.php?controller=album&method=ajouterAlbum" method="post" enctype="multipart/form-data" class="w-full">
            <!-- Album Art Upload -->
            <div class="mb-6 group cursor-pointer relative text-center">
                <label for="pochette_album" class="cursor-pointer">
                    <div class="relative w-48 h-48 bg-white border-2 border-gray-300 rounded-3xl flex items-center justify-center shadow-lg transition transform group-hover:scale-105 group-hover:border-paaxio-salmon mx-auto">
                        <i class="fas fa-plus text-6xl text-black group-hover:text-paaxio-salmon transition"></i>
                        <!-- L'image d'aperçu est maintenant positionnée à l'intérieur de la boîte -->
                        <img id="pochettePreview" src="" alt="Aperçu de la pochette" class="w-48 h-48 object-cover rounded-3xl hidden">
                    </div>
                </label>
                <input type="file" id="pochette_album" name="pochette_album" class="hidden" accept="image/png, image/jpeg, image/webp" required>
            </div>

            <!-- Album Title Display -->
            <h2 id="albumTitleDisplay" class="text-2xl font-bold text-gray-800 mb-4 text-center">Nom de l'album/single</h2>

            <!-- Album Input -->
            <div class="w-full max-w-lg mb-10 mx-auto">
                <input type="text" 
                       id="albumInput"
                       name="titre_album"
                       placeholder="Nom de l'album/Single" 
                       class="w-full px-4 py-3 rounded-lg bg-paaxio-inputBg border border-paaxio-salmon placeholder-gray-600 text-gray-800 font-medium focus:outline-none focus:ring-2 focus:ring-paaxio-salmonDark shadow-inner text-center"
                       required>
            </div>

            <!-- Album Release Date -->
            <div class="w-full max-w-lg mb-10 mx-auto">
                <input type="date" 
                       id="dateSortieAlbum"
                       name="date_sortie"
                       class="w-full px-4 py-3 rounded-lg bg-paaxio-inputBg border border-paaxio-salmon placeholder-gray-600 text-gray-800 font-medium focus:outline-none focus:ring-2 focus:ring-paaxio-salmonDark shadow-inner text-center"
                       required>
            </div>

            <!-- Tracklist Table -->
            <div class="w-full max-w-3xl bg-white/50 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg mb-10 mx-auto">
                <div class="bg-paaxio-salmonLight px-6 py-3 grid grid-cols-12 gap-4 text-white font-bold">
                    <div class="col-span-1">#</div>
                    <div class="col-span-8">Titre</div>
                    <div class="col-span-2 text-right">Duree</div>
                </div>
                
                <div id="trackList" class="max-h-64 overflow-y-auto custom-scroll">
                    {# Les chansons seront ajoutées ici par JavaScript #}
                    <div id="no-tracks" class="text-center py-4 text-gray-500">Aucun titre ajouté.</div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="w-full max-w-5xl flex flex-col md:flex-row justify-between items-center gap-4 mb-12 mx-auto">
                <button type="button" onclick="openAddTrackModal()" class="w-full md:w-auto bg-paaxio-salmon hover:bg-paaxio-salmonDark text-white font-bold py-4 px-12 rounded-lg shadow-lg transition transform hover:scale-105 text-lg">
                    Ajouter titre(s)
                </button>
                
                <button type="button" onclick="confirmSave()" class="w-full md:w-auto bg-paaxio-salmon hover:bg-paaxio-salmonDark text-white font-bold py-4 px-12 rounded-lg shadow-lg transition transform hover:scale-105 text-lg">
                    Enregistrer
                </button>
            </div>
        </form>
    </main>

    <!-- Modale pour ajouter un titre -->
    <div id="addTrackModal" class="fixed inset-0 z-50 hidden items-center justify-center modal-backdrop">
        <div class="bg-white rounded-lg shadow-xl p-8 w-full max-w-md animate-fade-in">
            <h2 class="text-2xl font-bold mb-4">Ajouter un titre</h2>
            <div class="mb-4">
                <label for="trackFile" class="block text-sm font-medium text-gray-700 mb-2">Fichier audio</label>
                <input type="file" id="trackFile" name="trackFile" class="w-full border rounded-md p-2" accept="audio/mpeg, audio/wav, audio/ogg">
            </div>
            <div class="mb-4">
                <label for="trackTitle" class="block text-sm font-medium text-gray-700">Titre</label>
                <input type="text" id="trackTitle" placeholder="Titre de la chanson" class="w-full mt-1 border rounded-md p-2">
            </div>
            <div class="mb-4">
                <label for="trackGenre" class="block text-sm font-medium text-gray-700">Genre</label>
                <input type="text" id="trackGenre" placeholder="Genre musical" class="w-full mt-1 border rounded-md p-2">
            </div>
            <div class="mb-4">
                {# La durée est extraite automatiquement, pas besoin de l'afficher. #}
                <input type="hidden" id="trackDuration">
            </div>
            <div class="flex justify-end space-x-4 mt-6">
                <button type="button" onclick="closeAddTrackModal()" class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Annuler</button>
                <button type="button" onclick="addTrackToList()" class="px-4 py-2 bg-paaxio-salmon text-white rounded-md hover:bg-paaxio-salmonDark">Enregistrer la chanson</button>
            </div>
        </div>
    </div>

    <!-- Modale pour modifier un titre -->
    <div id="editTrackModal" class="fixed inset-0 z-50 hidden items-center justify-center modal-backdrop">
        <div class="bg-white rounded-lg shadow-xl p-8 w-full max-w-md animate-fade-in">
            <h2 class="text-2xl font-bold mb-4">Modifier le titre</h2>
            <input type="hidden" id="editTrackIndex">
            <div class="mb-4">
                <label for="trackTitleEdit" class="block text-sm font-medium text-gray-700">Titre</label>
                <input type="text" id="trackTitleEdit" placeholder="Titre de la chanson" class="w-full mt-1 border rounded-md p-2">
            </div>
            <div class="mb-4">
                <label for="trackGenreEdit" class="block text-sm font-medium text-gray-700">Genre</label>
                <input type="text" id="trackGenreEdit" placeholder="Genre musical" class="w-full mt-1 border rounded-md p-2">
            </div>
            <div class="flex justify-end space-x-4 mt-6">
                <button type="button" onclick="closeEditTrackModal()" class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Annuler</button>
                <button type="button" onclick="saveTrackChanges()" class="px-4 py-2 bg-paaxio-salmon text-white rounded-md hover:bg-paaxio-salmonDark">Enregistrer les modifications</button>
            </div>
        </div>
    </div>

    <!-- Modale de confirmation -->
    <div id="confirmModal" class="fixed inset-0 z-50 hidden items-center justify-center modal-backdrop">
        <div class="bg-white rounded-lg shadow-xl p-8 w-full max-w-sm animate-fade-in text-center">
            <h2 class="text-xl font-bold mb-4">Confirmation</h2>
            <p class="mb-6">Voulez-vous vraiment enregistrer cet album ?</p>
            <div class="flex justify-center space-x-4">
                <button type="button" onclick="closeConfirmModal()" class="px-6 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Non</button>
                <button type="button" onclick="submitForm()" class="px-6 py-2 bg-paaxio-salmon text-white rounded-md hover:bg-paaxio-salmonDark">Oui</button>
            </div>
        </div>
    </div>

    <!-- Notification Toast (Hidden by default) -->
    <div id="toast" class="fixed bottom-5 right-5 bg-gray-800 text-white px-6 py-4 rounded-lg shadow-xl transform translate-y-20 opacity-0 transition-all duration-300 z-50 flex items-center">
        <i class="fas fa-check-circle text-green-400 mr-3 text-xl"></i>
        <span id="toastMessage">Action effectuée</span>
    </div>
</body>
{% endblock %}

{% block script %}
    <script src="assets/js/album_ajout.js"></script>
{% endblock %}
