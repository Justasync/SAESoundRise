{% extends "base_template.html.twig" %}

{% block title %}{{ page.title }}{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <h1 class="mb-4">{{ page.title }}</h1>

            {# Section pour les notifications #}
            {% if success %}
                <div class="alert alert-success" role="alert">
                    L'album a été ajouté avec succès !
                </div>
            {% endif %}
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    Une erreur est survenue. Veuillez vérifier les informations saisies et que la pochette est bien une image (jpg, png, webp).
                </div>
            {% endif %}

            {# Formulaire d'ajout d'album #}
            <div class="card mb-5">
                <div class="card-body">
                    <h5 class="card-title">Ajouter un nouvel album</h5>
                    <form action="index.php?controller=album&method=ajouterAlbum" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="titreAlbum" class="form-label">Titre de l'album</label>
                            <input type="text" class="form-control" id="titreAlbum" name="titreAlbum" required>
                        </div>
                        <div class="mb-3">
                            <label for="dateSortieAlbum" class="form-label">Date de sortie</label>
                            <input type="date" class="form-control" id="dateSortieAlbum" name="dateSortieAlbum" required>
                        </div>
                        <div class="mb-3">
                            <label for="urlPochetteAlbum" class="form-label">Pochette de l'album</label>
                            <input type="file" class="form-control" id="urlPochetteAlbum" name="urlPochetteAlbum" accept="image/png, image/jpeg, image/webp" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Ajouter l'album</button>
                    </form>
                </div>
            </div>

            {# Liste des albums de l'artiste #}
            <h2>Mes albums</h2>
            <div class="list-group">
                {% for album in albums %}
                    <div class="list-group-item list-group-item-action d-flex gap-3 py-3">
                        <img src="{{ album.urlPochetteAlbum }}" alt="Pochette de {{ album.titreAlbum }}" width="48" height="48" class="rounded-circle flex-shrink-0">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mb-0">{{ album.titreAlbum }}</h6>
                                <p class="mb-0 opacity-75">Sorti le {{ album.dateSortieAlbum|date("d/m/Y") }}</p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>Vous n'avez pas encore ajouté d'album.</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}