{% extends 'base_template.html.twig' %}

{% block title %}Administration - Paaxio{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        /* Couleurs Paaxio */
        :root {
            --paaxio-salmon: #D99181;
            --paaxio-salmon-hover: #c57d6d;
            --paaxio-bg: #F9F7F2;
            --paaxio-text: #333333;
        }

        body { background-color: var(--paaxio-bg); }

        /* Styles généraux */
        .text-paaxio { color: var(--paaxio-salmon) !important; }
        
        .btn-paaxio {
            background-color: var(--paaxio-salmon);
            color: white;
            border: none;
            transition: all 0.3s ease;
        }
        .btn-paaxio:hover {
            background-color: var(--paaxio-salmon-hover);
            color: white;
            transform: translateY(-2px);
        }

        /* Tableau */
        .table-paaxio {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            background-color: white;
            border-collapse: separate; 
            border-spacing: 0;
            width: 100%;
        }

        .table-paaxio thead {
            background-color: var(--paaxio-salmon);
            color: white;
        }

        .table-paaxio th {
            font-weight: 600;
            border: none;
            padding: 18px 15px;
            font-family: 'Manrope', sans-serif;
        }

        .table-paaxio td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #f0f0f0;
            background-color: white;
        }

        .table-paaxio tbody tr:last-child td { border-bottom: none; }
        .table-paaxio tbody tr:hover td { background-color: #fff5f2; }

        .admin-card-header {
            background-color: white;
            color: var(--paaxio-text);
            border-radius: 15px 15px 0 0;
            padding: 25px;
            border-bottom: 1px solid #eee;
        }

        .stat-card {
            background-color: var(--paaxio-salmon);
            border-radius: 15px;
            transition: transform 0.3s ease;
            box-shadow: 0 10px 20px rgba(217, 145, 129, 0.3);
        }
        .stat-card:hover { transform: translateY(-5px); }
    </style>
{% endblock %}

{% block content %}

<div class="container py-5">

    {# --- BLOC D'ALERTE DE SUCCÈS --- #}
    {% if success is defined and success is not null %}
        <div class="alert alert-success alert-dismissible fade show shadow-sm rounded-4 mb-4" role="alert" style="border-left: 5px solid #198754;">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                <div>
                    <strong>Succès !</strong> {{ success }}
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}

<div class="container py-5">
    
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold" style="color: #333; font-family: 'Manrope', sans-serif;">Tableau de Bord</h1>
        <p class="text-muted">Gérez les utilisateurs, les albums et le contenu de Paaxio.</p>
    </div>

    <div class="row mb-5 g-4 justify-content-center">
        <div class="col-md-4">
            <div class="p-4 text-center text-white h-100 d-flex flex-column justify-content-center stat-card">
                <h3 class="fs-5 fw-normal opacity-75">Total Utilisateurs</h3>
                <p class="display-4 fw-bold mb-0">{{ utilisateurs|length }}</p>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="admin-card-header d-flex justify-content-between align-items-center bg-white">
            <h4 class="mb-0 fw-bold" style="color: var(--paaxio-salmon);"><i class="bi bi-people-fill me-2"></i> Liste des Utilisateurs</h4>
            <a href="?controller=utilisateur&method=inscription" class="btn btn-outline-dark rounded-pill px-4">
                <i class="bi bi-plus-lg"></i> Nouvel Utilisateur
            </a>
        </div>
        
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-paaxio mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Utilisateur</th>
                            <th>Email</th>
                            <th>Rôle</th> <!-- Colonne Statut supprimée -->
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in utilisateurs %}
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    {% if user.urlPhotoUtilisateur %}
                                        <img src="{{ user.urlPhotoUtilisateur }}" alt="Avatar" class="rounded-circle me-3 shadow-sm" width="45" height="45" style="object-fit: cover;">
                                    {% else %}
                                        <div class="rounded-circle me-3 d-flex align-items-center justify-content-center bg-light text-secondary shadow-sm" style="width: 45px; height: 45px;">
                                            <i class="bi bi-person-fill fs-5"></i>
                                        </div>
                                    {% endif %}
                                    <div>
                                        <div class="fw-bold text-dark">{{ user.pseudoUtilisateur }}</div>
                                        <div class="small text-muted">{{ user.nomUtilisateur }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-secondary">{{ user.emailUtilisateur }}</td>
                            
                            <td>
                                {# Tentative de récupération du nom du rôle via les propriétés de l'objet Role #}
                                {# Twig cherchera getLibelleRole(), getTypeRole() ou les propriétés publiques #}
                                
                                {% set roleName = 'Inconnu' %}

                                {% if user.roleUtilisateur.libelleRole is defined %}
                                    {% set roleName = user.roleUtilisateur.libelleRole %}
                                {% elseif user.roleUtilisateur.typeRole is defined %}
                                    {% set roleName = user.roleUtilisateur.typeRole %}
                                {% endif %}

                                {# Application du filtre lower sur le TEXTE extrait #}
                                {% set roleLower = roleName|lower %}

                                {% if 'admin' in roleLower %}
                                    <span class="badge bg-dark px-3 py-2 rounded-pill">Admin</span>
                                
                                {% elseif 'artiste' in roleLower %}
                                    <span class="badge px-3 py-2 rounded-pill" style="background-color: #D99181; color: white;">Artiste</span>
                                
                                {% elseif 'auditeur' in roleLower %}
                                    <span class="badge bg-info bg-opacity-75 px-3 py-2 rounded-pill text-white">Auditeur</span>
                                
                                {% else %}
                                    {# Cas par défaut #}
                                    <span class="badge bg-secondary bg-opacity-50 text-dark px-3 py-2 rounded-pill">{{ roleName }}</span>
                                {% endif %}
                            </td>
                            <!-- Colonne Statut supprimée ici aussi -->
                            <td class="text-end pe-4">
                                <a href="?controller=admin&method=modifier&id={{ user.emailUtilisateur }}" class="btn btn-sm btn-light text-secondary border rounded-circle me-1" style="width: 32px; height: 32px; padding: 0; line-height: 30px;" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="?controller=admin&method=supprimer&id={{ user.emailUtilisateur }}" 
                                   class="btn btn-sm btn-light text-danger border rounded-circle" 
                                   style="width: 32px; height: 32px; padding: 0; line-height: 30px;"
                                   title="Supprimer"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-3 opacity-25"></i>
                                Aucun utilisateur enregistré.
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}