{% extends 'base_template.html.twig' %}

{% block title %}Administration - Paaxio{% endblock %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="assets/css/dataTables.bootstrap5.min.css">
{% endblock %}

{% block content %}
<style>
    /* Configuration des couleurs de la pagination */
    #usersTable_wrapper {
        --bs-pagination-color: #666;
        --bs-pagination-hover-color: #D99181;
        --bs-pagination-hover-bg: #f8f9fa;
        --bs-pagination-focus-color: #D99181;
        --bs-pagination-active-color: #fff;
        --bs-pagination-active-bg: #D99181; 
        --bs-pagination-active-border-color: #D99181;
        --bs-pagination-focus-box-shadow: 0 0 0 0.25rem rgba(217, 145, 129, 0.25);
    }

    /* Style des boutons de pagination arrondis */
    #usersTable_wrapper .page-link {
        border-radius: 50% !important;
        margin: 0 3px;
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #dee2e6;
    }

    /* Style des en-têtes de colonnes et indicateurs de tri */
    #usersTable thead th {
        background-color: #fff;
        color: #6c757d;
        font-weight: 700;
        text-transform: uppercase;
        border-bottom: 1px solid #dee2e6;
        padding: 15px;
        position: relative;
        cursor: pointer;
    }
    
    /* Icônes de tri (Bootstrap Icons) */
    #usersTable thead th.sorting::after,
    #usersTable thead th.sorting_asc::after,
    #usersTable thead th.sorting_desc::after {
        font-family: "bootstrap-icons";
        position: absolute;
        right: 10px;
        opacity: 0.3;
    }

    #usersTable thead th.sorting::after { content: "\f22c"; } /* Flèches neutres */
    #usersTable thead th.sorting_asc::after { content: "\f235"; opacity: 1; color: #D99181; } /* Flèche haut */
    #usersTable thead th.sorting_desc::after { content: "\f229"; opacity: 1; color: #D99181; } /* Flèche bas */

    #usersTable td {
        vertical-align: middle;
        padding: 15px;
    }

    /* Champs de recherche et sélecteurs arrondis */
    .dataTables_filter input, .dataTables_length select {
        border-radius: 20px !important;
        border: 1px solid #ced4da;
        padding: 5px 15px;
    }
    .dataTables_filter input:focus {
        border-color: #D99181 !important;
        box-shadow: 0 0 0 0.25rem rgba(217, 145, 129, 0.25) !important;
        outline: none;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark mb-0">
            <i class="bi bi-people me-2"></i>Liste des Utilisateurs
        </h3>
        
        <div class="d-flex gap-3">
            <select id="roleFilter" class="form-select border shadow-sm" style="width: 160px; border-radius: 20px;">
                <option value="">Tous les rôles</option>
                <option value="Admin">Admin</option>
                <option value="Artiste">Artiste</option>
                <option value="Auditeur">Auditeur</option>
            </select>

            <a href="?controller=utilisateur&method=inscription" class="btn btn-dark px-4" style="border-radius: 20px;">
                <i class="bi bi-plus-lg me-1"></i> Nouvel Utilisateur
            </a>
        </div>
    </div>

    <div class="card rounded-4 bg-white border-0 shadow-sm">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table id="usersTable" class="table table-hover mb-0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Utilisateur</th>
                            <th>Email</th>
                            <th>Rôle</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in utilisateurs %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    {% if user.urlPhotoUtilisateur %}
                                        <img src="{{ user.urlPhotoUtilisateur }}" class="rounded-circle me-3" width="40" height="40" style="object-fit: cover;">
                                    {% else %}
                                        <div class="rounded-circle me-3 d-flex align-items-center justify-content-center bg-light text-secondary border" style="width: 40px; height: 40px;">
                                            <i class="bi bi-person-fill fs-5"></i>
                                        </div>
                                    {% endif %}
                                    <div>
                                        <div class="fw-bold text-dark">{{ user.pseudoUtilisateur }}</div>
                                        <div class="small text-muted">{{ user.nomUtilisateur }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-secondary">{{ user.emailUtilisateur }}</td>
                            <td>
                                {% set roleName = user.roleUtilisateur.libelleRole|default(user.roleUtilisateur.typeRole|default('Inconnu')) %}
                                {% set roleLower = roleName|lower %}
                                
                                {% if 'admin' in roleLower %}
                                    <span class="badge rounded-pill" style="background-color: #212529; color: white; padding: 8px 12px;">Admin</span>
                                {% elseif 'artiste' in roleLower %}
                                    <span class="badge rounded-pill" style="background-color: #D99181; color: white; padding: 8px 12px;">Artiste</span>
                                {% elseif 'auditeur' in roleLower %}
                                    <span class="badge rounded-pill" style="background-color: #0dcaf0; color: white; padding: 8px 12px;">Auditeur</span>
                                {% else %}
                                    <span class="badge rounded-pill" style="background-color: #e9ecef; color: #333; padding: 8px 12px;">{{ roleName }}</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                <a href="?controller=admin&method=modifier&id={{ user.emailUtilisateur }}" class="btn btn-sm btn-light text-secondary rounded-circle me-1" title="Modifier"><i class="bi bi-pencil"></i></a>
                                <a href="?controller=admin&method=supprimer&id={{ user.emailUtilisateur }}" class="btn btn-sm btn-light text-danger rounded-circle" onclick="return confirm('Supprimer ?');" title="Supprimer"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block script %}
    {{ parent() }}
    
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/jquery.dataTables.min.js"></script>
    <script src="assets/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function() {
            var table = $('#usersTable').DataTable({
                language: {
                    processing:     "Traitement en cours...",
                    search:         "", 
                    searchPlaceholder: "Rechercher un utilisateur...",
                    lengthMenu:     "Afficher _MENU_",
                    info:           "Affichage de _START_ à _END_ sur _TOTAL_ utilisateurs",
                    infoEmpty:      "Affichage de 0 à 0 sur 0 utilisateurs",
                    infoFiltered:   "(filtré de _MAX_ éléments au total)",
                    loadingRecords: "Chargement en cours...",
                    zeroRecords:    "Aucun élément à afficher",
                    emptyTable:     "Aucune donnée disponible",
                    paginate: {
                        first:      "Premier",
                        previous:   '<i class="bi bi-chevron-left"></i>', 
                        next:       '<i class="bi bi-chevron-right"></i>', 
                        last:       "Dernier"
                    }
                },
                pageLength: 10,
                // Configuration du DOM (Placement des éléments de recherche et pagination)
                dom: "<'row mb-3 align-items-center'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6 text-end'f>>" +
                     "<'row'<'col-sm-12'tr>>" +
                     "<'row mt-3 align-items-center'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                // Configuration du tri initial
                order: [[0, 'asc']], 
                // Désactiver le tri sur la colonne 'Actions'
                columnDefs: [
                    { orderable: false, targets: -1 }
                ]
            });

            // Gestionnaire de filtre par rôle
            $('#roleFilter').on('change', function() {
                table.column(2).search($(this).val()).draw();
            });
        });
    </script>
{% endblock %}