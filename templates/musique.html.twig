{% extends 'base_template.html.twig' %}

{% block content %}
   
    <!-- Playlist  -->
    <section class="text-center">
        <h2 class="fw-bold mb-4">Playlists</h2>
        <div class="d-flex justify-content-center flex-wrap gap-4">
            <div class="p-3 rounded-4" style="background-color:#E58E82; width:180px;">
                <div class="rounded-4 bg-light mx-auto mb-2" style="width:150px; height:150px;"></div>
                <p class="mb-0">Chansons likées</p>
            </div>
            {% for i in 2..4 %}
                <div class="p-3 rounded-4" style="background-color:#E58E82; width:180px;">
                    <div class="rounded-4 bg-light mx-auto mb-2" style="width:150px; height:150px;"></div>
                    <p class="mb-0">Nom de Album/Single</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Récemment écoutées -->
    <section class="text-center">
        <h2 class="fw-bold my-4">Récemment écoutées</h2>
        <div class="d-flex justify-content-center flex-wrap gap-4">
            {% for i in 1..4 %}
                <div class="p-3 rounded-4" style="background-color:#E58E82; width:180px;">
                    <div class="rounded-4 bg-light mx-auto mb-2" style="width:150px; height:150px;"></div>
                    <p class="mb-0">Nom de Album/Single</p>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}