{% extends 'base_template.html.twig' %}

{#
 # @file reset_password_error.html.twig
 # @brief Template pour la page d'erreur de réinitialisation de mot de passe.
 # 
 # Cette page s'affiche lorsque le lien de réinitialisation de mot de passe
 # est invalide, expiré ou a déjà été utilisé. Elle propose à l'utilisateur
 # de faire une nouvelle demande de réinitialisation.
 # 
 # @var string error_message Le message d'erreur à afficher.
 # 
 # @extends base_template.html.twig
 #}

{% block content %}
<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-md-6 col-lg-5">
			<div class="card shadow text-center">
				<div class="card-body p-4">
					<div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
						<i class="bi bi-x-lg fs-2"></i>
					</div>

					<h1 class="h4 mb-3">Lien invalide ou expiré</h1>

					<p class="text-muted mb-4">
						{{ error_message|default('Ce lien de réinitialisation de mot de passe n\'est plus valide. Les liens expirent après 1 heure pour des raisons de sécurité.') }}
                    </p>

                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                        <a href="/?controller=utilisateur&method=afficherMotDePasseOublie" class="btn btn-primary">
                            <i class="bi bi-arrow-repeat me-2"></i>
                            Nouvelle demande
                        </a>
                        <a href="/?controller=home&method=afficher" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-2"></i>
                            Accueil
                        </a>
                    </div>

                    <hr class="my-4">
                    
                    <p class="text-muted small mb-0">
                        <i class="bi bi-question-circle me-1"></i>
                        Un problème ? <a href="/?controller=home&method=afficherLegales#contact">Contactez-nous</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 
